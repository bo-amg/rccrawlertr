---
pagination:
  data: collections.incelemeler
  size: 10
  alias: incelemeler
permalink: "/incelemeler/{% if pagination.pageNumber > 0 %}sayfa-{{ pagination.pageNumber + 1 }}/{% endif %}index.html"
layout: layouts/base.njk
title: Incelemeler
---

<div class="listing-page">
    <div class="container">
        <h1>RC Crawler Incelemeleri</h1>
        
        <div class="articles-grid">
            {% for inceleme in incelemeler %}
            <article class="article-card">
                <div class="article-image">üöô</div>
                <div class="article-content">
                    <span class="article-tag">Inceleme</span>
                    <h3><a href="{{ inceleme.url }}">{{ inceleme.data.title }}</a></h3>
                    <p>{{ inceleme.data.description }}</p>
                    <p style="color: #999; font-size: 0.85rem;">{{ inceleme.date | tarihFormat }}</p>
                    <a href="{{ inceleme.url }}" class="read-more">Devamini Oku ‚Üí</a>
                </div>
            </article>
            {% endfor %}
        </div>
        
        {% if pagination.pages.length > 1 %}
        <nav style="text-align: center; margin-top: 3rem;">
            {% if pagination.href.previous %}
            <a href="{{ pagination.href.previous }}" class="cta-button" style="margin-right: 1rem;">‚Üê Onceki Sayfa</a>
            {% endif %}
            
            {% if pagination.href.next %}
            <a href="{{ pagination.href.next }}" class="cta-button">Sonraki Sayfa ‚Üí</a>
            {% endif %}
        </nav>
        {% endif %}
    </div>
</div>
