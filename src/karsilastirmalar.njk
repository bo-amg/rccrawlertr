---
layout: layouts/base.njk
title: Karsilastirmalar
---

<div class="listing-page">
    <div class="container">
        <h1>RC Crawler Karsilastirmalari</h1>
        
        <div class="articles-grid">
            {% for karsilastirma in collections.karsilastirmalar %}
            <article class="article-card">
                <div class="article-image">⚖️</div>
                <div class="article-content">
                    <span class="article-tag">Karsilastirma</span>
                    <h3><a href="{{ karsilastirma.url }}">{{ karsilastirma.data.title }}</a></h3>
                    <p>{{ karsilastirma.data.description }}</p>
                    <p style="color: #999; font-size: 0.85rem;">{{ karsilastirma.date | tarihFormat }}</p>
                    <a href="{{ karsilastirma.url }}" class="read-more">Devamini Oku →</a>
                </div>
            </article>
            {% endfor %}
        </div>
        
        {% if collections.karsilastirmalar.length == 0 %}
        <p style="text-align: center; color: #666; padding: 3rem;">Henüz karsilastirma eklenmemis. Yakinda guncel iceriklerle karsinizda olacagiz!</p>
        {% endif %}
    </div>
</div>
